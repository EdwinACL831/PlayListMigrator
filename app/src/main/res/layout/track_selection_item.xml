<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/track_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:checked="true"
        />

    <TextView
        android:id="@+id/track_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/track_artist"
        app:layout_constraintEnd_toStartOf="@id/track_info_btn"
        app:layout_constraintStart_toEndOf="@+id/track_checkbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.05" />

    <TextView
        android:id="@+id/track_artist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/track_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/track_checkbox"
        app:layout_constraintEnd_toStartOf="@id/track_info_btn"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.05" />

    <ImageButton
        android:id="@+id/track_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/baseline_info_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>